{{#extend "layout"}}
  {{#content "main"}}
    <div class="max-w-4xl mx-auto p-6">
      <h1 class="text-3xl font-bold text-white mb-6">About Us</h1>
      
      <div class="bg-gray-900 shadow rounded-lg p-6 space-y-8">
        <!-- Mission Statement -->
        <section>
          <h2 class="text-2xl font-semibold text-white mb-4">Our Mission</h2>
          <p class="text-gray-300 leading-relaxed">
            We strive to create the most comprehensive and user-friendly directory platform, 
            connecting people with the resources and information they need. Our goal is to 
            make information accessible and organized for everyone.
          </p>
        </section>

        <!-- What We Do -->
        <section>
          <h2 class="text-2xl font-semibold text-white mb-4">What We Do</h2>
          <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
            <div class="bg-gray-800 p-4 rounded-lg">
              <h3 class="text-lg font-medium text-white mb-2">Curate Content</h3>
              <p class="text-gray-300">
                We carefully select and organize information to ensure quality and relevance 
                for our users.
              </p>
            </div>
            <div class="bg-gray-800 p-4 rounded-lg">
              <h3 class="text-lg font-medium text-white mb-2">Connect People</h3>
              <p class="text-gray-300">
                Our platform brings together users and providers, creating valuable 
                connections within our community.
              </p>
            </div>
          </div>
        </section>

        <!-- Team Section -->
        <section>
          <h2 class="text-2xl font-semibold text-white mb-4">Our Team</h2>
          <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
            <div class="text-center">
              <div class="w-24 h-24 mx-auto mb-4">
                <img src="https://placehold.co/96x96" alt="Team Member" class="w-full h-full rounded-full object-cover">
              </div>
              <h3 class="font-medium text-white">Jane Doe</h3>
              <p class="text-gray-300">Founder & CEO</p>
            </div>
            <div class="text-center">
              <div class="w-24 h-24 mx-auto mb-4">
                <img src="https://placehold.co/96x96" alt="Team Member" class="w-full h-full rounded-full object-cover">
              </div>
              <h3 class="font-medium text-white">John Smith</h3>
              <p class="text-gray-300">Technical Lead</p>
            </div>
            <div class="text-center">
              <div class="w-24 h-24 mx-auto mb-4">
                <img src="https://placehold.co/96x96" alt="Team Member" class="w-full h-full rounded-full object-cover">
              </div>
              <h3 class="font-medium text-white">Sarah Johnson</h3>
              <p class="text-gray-300">Content Director</p>
            </div>
          </div>
        </section>

        <!-- Values -->
        <section>
          <h2 class="text-2xl font-semibold text-white mb-4">Our Values</h2>
          <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
            <div class="flex items-start space-x-3">
              <svg class="w-6 h-6 text-blue-600 mt-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
              </svg>
              <div>
                <h3 class="font-medium text-white">Quality</h3>
                <p class="text-gray-300">We maintain high standards in all aspects of our service.</p>
              </div>
            </div>
            <div class="flex items-start space-x-3">
              <svg class="w-6 h-6 text-blue-600 mt-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
              </svg>
              <div>
                <h3 class="font-medium text-white">Transparency</h3>
                <p class="text-gray-300">We believe in open and honest communication.</p>
              </div>
            </div>
            <div class="flex items-start space-x-3">
              <svg class="w-6 h-6 text-blue-600 mt-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
              </svg>
              <div>
                <h3 class="font-medium text-white">Innovation</h3>
                <p class="text-gray-300">We continuously improve and adapt to new technologies.</p>
              </div>
            </div>
            <div class="flex items-start space-x-3">
              <svg class="w-6 h-6 text-blue-600 mt-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
              </svg>
              <div>
                <h3 class="font-medium text-white">Community</h3>
                <p class="text-gray-300">We foster meaningful connections and collaboration.</p>
              </div>
            </div>
          </div>
        </section>
      </div>
    </div>
  {{/content}}
{{/extend}} 