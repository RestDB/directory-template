{{#extend "layout"}}
  {{#content "main"}}
    <div class="max-w-4xl mx-auto p-6">
      <h1 class="text-3xl font-bold text-white mb-6">Contact Us</h1>
      
      <div class="bg-gray-900 shadow rounded-lg p-6">
        <form class="space-y-6">
          <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
            <div>
              <label class="block text-sm font-medium text-gray-300 mb-2">First Name</label>
              <input type="text" class="w-full px-3 py-2 bg-gray-800 border border-gray-700 rounded-md text-white placeholder-gray-400 focus:outline-none focus:ring-2 focus:ring-gray-600">
            </div>
            <div>
              <label class="block text-sm font-medium text-gray-300 mb-2">Last Name</label>
              <input type="text" class="w-full px-3 py-2 bg-gray-800 border border-gray-700 rounded-md text-white placeholder-gray-400 focus:outline-none focus:ring-2 focus:ring-gray-600">
            </div>
          </div>

          <div>
            <label class="block text-sm font-medium text-gray-300 mb-2">Email</label>
            <input type="email" class="w-full px-3 py-2 bg-gray-800 border border-gray-700 rounded-md text-white placeholder-gray-400 focus:outline-none focus:ring-2 focus:ring-gray-600">
          </div>

          <div>
            <label class="block text-sm font-medium text-gray-300 mb-2">Subject</label>
            <input type="text" class="w-full px-3 py-2 bg-gray-800 border border-gray-700 rounded-md text-white placeholder-gray-400 focus:outline-none focus:ring-2 focus:ring-gray-600">
          </div>

          <div>
            <label class="block text-sm font-medium text-gray-300 mb-2">Message</label>
            <textarea rows="4" class="w-full px-3 py-2 bg-gray-800 border border-gray-700 rounded-md text-white placeholder-gray-400 focus:outline-none focus:ring-2 focus:ring-gray-600"></textarea>
          </div>

          <div>
            <button type="submit" class="bg-gray-700 text-white px-6 py-2 rounded-md hover:bg-gray-600 focus:outline-none focus:ring-2 focus:ring-gray-500">
              Send Message
            </button>
          </div>
        </form>
      </div>
    </div>
  {{/content}}
{{/extend}} 