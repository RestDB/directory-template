{{#extend "layout"}}
{{#content "main"}}
    <main class="flex-1 p-8 bg-gray-800">
        <div class="max-w-4xl mx-auto">
            <img src="{{listing.imageUrl}}" alt="{{listing.title}}" class="h-30 object-cover rounded-lg shadow-lg">
            
            <div class="mt-8">
                <h1 class="text-4xl font-bold mb-4 text-gray-100">
                    <a href="{{listing.siteUrl}}" class="hover:underline">{{listing.title}}</a>
                </h1>
                <div class="text-xl text-gray-300 mb-6">
                    {{{listing.content}}}
                </div>
                <div class="bg-gradient-to-br from-gray-800 to-gray-900 rounded-lg shadow-lg p-6 border border-gray-700">
                    <div class="prose max-w-none text-gray-100">
                        {{{listing.ingress}}}
                    </div>
                    
                    <div class="mt-6 border-t border-gray-700 pt-6">
                        <h2 class="text-2xl font-bold mb-4 text-gray-100">Details</h2>
                        <dl class="grid grid-cols-1 md:grid-cols-2 gap-4">
                            {{#each listing.details}}
                            <div>
                                <dt class="font-semibold text-gray-400">{{label}}</dt>
                                <dd class="text-gray-100">{{value}}</dd>
                            </div>
                            {{/each}}
                        </dl>
                    </div>
                </div>
            </div>
        </div>
    </main>
{{/content}}
{{/extend}}
