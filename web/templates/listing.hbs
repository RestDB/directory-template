{{#extend "layout"}}
{{#content "main"}}
<div class="hero bg-base-200 min-h-[50vh] items-start pt-8">
    <div class="hero-content text-center">
        <div class="max-w-[800px] mx-auto">
            <h1 class="text-5xl font-bold">{{listing.title}}</h1>
            <div class="card bg-base-100 w-full lg:max-w-[740px] lg:mx-0 mt-4">
                <figure class="px-4 pt-4">
                    <img src="https://placehold.co/96x96" alt="{{listing.title}}">
                    <!-- <img src="{{listing.imageUrl}}" alt="{{listing.title}}" class="rounded-xl w-full"> -->
                </figure>

                <div class="card-body text-left">                    

                    <div class="prose max-w-none">
                        {{{listing.content}}}
                    </div>

                    <div class="mt-6">
                        <h2 class="text-xl font-semibold mb-4">Details</h2>
                        <dl class="grid gap-4">
                            {{#each listing.details}}
                            <div class="grid grid-cols-2">
                                <dt class="font-medium">{{label}}</dt>
                                <dd>
                                    {{#if (eq label "Website")}}
                                    <a href="{{value}}" class="link link-primary" target="_blank"
                                        rel="noopener noreferrer">{{value}}</a>
                                    {{else}}
                                    {{value}}
                                    {{/if}}
                                </dd>
                            </div>
                            {{/each}}
                        </dl>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{{/content}}
{{/extend}}