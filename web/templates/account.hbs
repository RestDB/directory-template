{{#extend "layout"}}
  {{#content "main"}}
    <div>
      <h1>My Account</h1>
      
      <div>
        <!-- Profile Section -->
        <div>
          <h2>Profile Information</h2>
          <div>
            <div>
              <label>Name</label>
              <input type="text">
            </div>
            <div>
              <label>Email</label>
              <input type="email">
            </div>
          </div>
        </div>

        <!-- Password Section -->
        <div>
          <h2>Change Password</h2>
          <div>
            <div>
              <label>Current Password</label>
              <input type="password">
            </div>
            <div>
              <label>New Password</label>
              <input type="password">
            </div>
            <div>
              <label>Confirm New Password</label>
              <input type="password">
            </div>
          </div>
        </div>

        <div>
          <button>
            Save Changes
          </button>
        </div>
      </div>
    </div>
  {{/content}}
{{/extend}} 