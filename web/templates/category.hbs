<!-- Main Content -->
{{#extend "layout"}}
{{#content "main"}}
<main class="flex-1 p-8 bg-gray-800">
    <h1 class="text-3xl font-bold mb-8 text-gray-100">Category: {{category}}</h1>
    <p class="text-gray-400 mb-6">Category Description</p>
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
        {{#each categoryFeatures}}
        <div class="bg-gradient-to-br from-gray-800 to-gray-900 rounded-lg shadow-lg overflow-hidden border border-gray-700">
            <img src="{{imageUrl}}" alt="{{title}}" class="w-full h-48 object-cover">
            <div class="p-4">
                <h2 class="text-xl font-bold mb-2 text-gray-100">{{this.title}}</h2>
                <p class="text-gray-400">{{this.content}}</p>
                <a href="/listing/{{slug}}/{{_id}}"
                    class="mt-4 inline-block bg-gray-700 text-gray-100 px-4 py-2 rounded hover:bg-gray-600 transition-colors duration-200">
                    View Details
                </a>
            </div>
        </div>
        {{/each}}
    </div>
</main>
{{/content}}
{{/extend}}