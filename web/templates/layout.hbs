<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>{{title}}</title>
  <link rel="stylesheet" href="/css/output.css">
  <script src="https://unpkg.com/lunr/lunr.js" defer></script>
</head>
<body class="bg-gray-800 min-h-screen">
  <!-- Top Navigation Bar -->
  <nav class="bg-gray-800 shadow-lg">
    <div class="max-w-7xl mx-auto px-4">
      <div class="flex justify-between h-16">
        <!-- Logo/Title -->
        <div class="flex items-center">
          <!-- Mobile Sidebar Toggle -->
          <button type="button" 
                  onclick="document.getElementById('sidebar').classList.toggle('-translate-x-full');
                          this.querySelector('svg').classList.toggle('rotate-90')"
                  class="md:hidden mr-3 p-2 rounded-md text-gray-300 hover:text-white hover:bg-gray-700">
            <svg class="w-6 h-6 transform transition-transform duration-200" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7" />
            </svg>
          </button>
          <a href="/" class="flex items-center">
            <!-- Actual logo image -->
            <img src="https://placehold.co/30x30" alt="Logo" class="hidden md:block w-8 h-8 ml-2 rounded-full">
            <span class="text-xl font-bold text-white pl-2">Backend tools</span>
          </a>
        </div>

        <!-- Remove the old search bar div and leave space for menu items -->
        <div class="flex-1"></div>

        <!-- Mobile menu button -->
        <div class="flex items-center md:hidden">
          <button type="button" 
                  onclick="document.getElementById('mobile-menu').classList.toggle('hidden');
                          document.getElementById('mobile-search').classList.toggle('hidden')"
                  class="inline-flex items-center justify-center p-2 rounded-md text-gray-300 hover:text-white hover:bg-gray-700 focus:outline-none" 
                  aria-controls="mobile-menu" 
                  aria-expanded="false">
            <span class="sr-only">Open main menu</span>
            <!-- Menu icon -->
            <svg class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
            </svg>
          </button>
        </div>

        <!-- Desktop menu items -->
        <div class="hidden md:flex md:items-center md:space-x-6">
          <a href="/" class="text-gray-300 hover:text-white">Home</a>
          <a href="/about" class="text-gray-300 hover:text-white">About</a>
          <a href="/contact" class="text-gray-300 hover:text-white">Contact</a>
          <a href="/account" class="text-gray-300 hover:text-white">Account</a>
        </div>
      </div>
    </div>

    <!-- Mobile menu items -->
    <div class="hidden md:hidden" id="mobile-menu">
      <div class="px-2 pt-2 pb-3 space-y-1">
        <a href="/" class="block px-3 py-2 text-gray-300 hover:text-white hover:bg-gray-700">Home</a>
        <a href="/about" class="block px-3 py-2 text-gray-300 hover:text-white hover:bg-gray-700">About</a>
        <a href="/contact" class="block px-3 py-2 text-gray-300 hover:text-white hover:bg-gray-700">Contact</a>
        <a href="/account" class="block px-3 py-2 text-gray-300 hover:text-white hover:bg-gray-700">Account</a>
      </div>
    </div>

  </nav>

  <div class="flex">
    <!-- Sidebar -->
    <aside id="sidebar" class="fixed md:static w-64 bg-gray-800 min-h-screen p-4 transform -translate-x-full md:translate-x-0 transition-transform duration-200 ease-in-out z-10">
      <h2 class="text-white text-xl font-bold mb-4">Categories</h2>
      <nav>
        {{#each directories}}
        <a href="/category/{{categorySlug}}" class="block mb-2">
          <span class="inline-flex items-center px-3 py-1 rounded-full text-sm font-medium bg-gray-700 text-gray-300 hover:bg-gray-600 hover:text-white transition-colors">
            {{name}}
            <span class="ml-2 bg-gray-800 px-2 py-0.5 rounded-full text-xs">
              {{count}}
            </span>
          </span>
        </a>
        {{/each}}
      </nav>
    </aside>

    <!-- Main Content -->
    <div class="flex-1">
      <!-- Add Hero Section with Search -->
      <div class="bg-gradient-to-br from-gray-900 via-gray-800 to-gray-900 shadow-lg lg:mx-8 lg:my-8 relative overflow-hidden">
        <div class="absolute inset-0 bg-[radial-gradient(circle_at_30%_50%,rgba(135,206,235,0.1),transparent_50%)] pointer-events-none"></div>
        <div class="max-w-7xl mx-auto px-4 py-12 sm:px-6 sm:py-16 lg:px-8 relative">
          <div class="text-center">
            <h1 class="text-4xl font-extrabold text-white sm:text-5xl md:text-6xl">
              Search for tools
            </h1>
            <p class="mt-3 max-w-md mx-auto text-base text-gray-300 sm:text-lg md:mt-5 md:text-xl md:max-w-3xl">
              Search through our directory to discover the tools you're looking for.
            </p>
            <div class="mt-8 max-w-xl mx-auto">
              <div class="relative">
                <input type="text" 
                       class="w-full px-4 py-3 rounded-lg bg-gray-800 border border-gray-700 text-white placeholder-gray-400 focus:outline-none focus:border-gray-500 focus:ring-2 focus:ring-gray-600"
                       placeholder="Search...">
                <button class="absolute right-2 top-1/2 transform -translate-y-1/2 p-2 hover:bg-gray-700 rounded-full">
                  <svg class="w-6 h-6 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z" />
                  </svg>
                </button>
              </div>
            </div>
          </div>
        </div>
      </div>

      {{#block "main"}}
      {{/block}}
    </div>
  </div>
</body>
</html>
