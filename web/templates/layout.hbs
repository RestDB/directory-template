<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <meta name="keywords" content="{{keywords}}">
  <title>{{title}}</title>
  <!-- <script src="https://cdn.tailwindcss.com"></script> -->
  <!-- <link href="https://cdn.jsdelivr.net/npm/daisyui@3.7.3/dist/full.css" rel="stylesheet" type="text/css" /> -->
  <script src="https://unpkg.com/lunr/lunr.js" defer></script>
  <script src="/js/mybundle.js?cachebrk={{cacheBreaker}}" defer></script>
  <link href="/css/mystyles.css?cachebrk={{cacheBreaker}}" rel="stylesheet" type="text/css" />
  
</head>

<body>
  <div class="min-h-screen flex flex-col">
    <!-- Navbar -->
    <nav class="bg-base-100 shadow-lg">
      <div class="container mx-auto px-4">
        <div class="navbar">
          <div class="navbar-start">
            <label for="my-drawer-2" class="btn btn-ghost drawer-button lg:hidden">
              <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
              </svg>
            </label>
            <a class="text-xl hidden lg:flex" href="/">            
              <img src="/img/logo.svg" alt="DevEssentials Logo" class="h-6 w-6 mr-1" />
              <span class="pl-1">{{title}}</span>
            </a>
          </div>
          <div class="navbar-center lg:flex">
            <div class="w-full lg:min-w-[500px] lg:flex">
              <div class="dropdown w-full">
                <label class="input w-full">
                  <svg class="h-[1em] opacity-50" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24"><g stroke-linejoin="round" stroke-linecap="round" stroke-width="2.5" fill="none" stroke="currentColor"><circle cx="11" cy="11" r="8"></circle><path d="m21 21-4.3-4.3"></path></g></svg>
                  <input 
                    role="button"
                    type="search" 
                    class="grow" 
                    placeholder="Search tools" 
                    id="search-input"
                    oninput="handleSearch(this.value)"
                  />
                  <kbd class="kbd kbd-sm">⌘</kbd>
                  <kbd class="kbd kbd-sm">K</kbd>
                </label>
                <ul id="search-results" class="menu dropdown-content bg-base-100 rounded-box z-1 p-2 shadow-sm hidden w-full"></ul>
              </div>
            </div>

          </div>
          <div class="navbar-end">
            <ul class="menu menu-horizontal px-1 hidden lg:flex">
              <li><a href="/about" class="font-medium">About</a></li>              
            </ul>
          </div>
        </div>
      </div>
    </nav>

    <!-- Main Content -->
    <main class="flex-grow p-2 lg:p-2">
      <div class="flex flex-row">        
        <!-- Left Sidebar -->
        <div class="drawer flex-0 drawer-start lg:drawer-open">
          <input id="my-drawer-2" type="checkbox" class="drawer-toggle" />
          <div class="drawer-content">
            <!-- Page content here -->
          </div>
          <div class="drawer-side h-full z-50">
            <label for="my-drawer-2" aria-label="close sidebar" class="drawer-overlay"></label>
            <ul class="menu bg-base-200 text-base-content w-80 p-4">
              <!-- Mobile-only menu items -->
              <li class="lg:hidden"><a href="/">Home</a></li>
              <li class="lg:hidden"><a href="/about">About</a></li>
              <li class="lg:hidden"><div class="divider"></div></li>
              <li><a href="/bigbrands">Big Brands <div class="badge badge-sm">9</div></a></li>
              <!-- Sidebar content here -->
              {{#each directories}}
              <li>
                  <a href="/listing/{{categorySlug}}" class="{{#if (eq ../category categorySlug)}}menu-active{{/if}}">{{name}} <div class="badge badge-sm">{{count}}</div></a>
              </li>
              {{/each}}
            </ul>
          </div>
        </div>

        <!-- Main Content Area -->
        <div class="flex-1 max-w-[1200px] mx-auto">
          {{#block "main"}}
          {{/block}}
        </div>
      </div>
    </main>

    <!-- Footer -->
    <footer class='footer footer-center p-10 text-base-content'>
        <div>
          <div class='mt-4'>
            <p>Copyright © 2025 - All rights reserved</p>
            <p class='mt-2'>
              Powered by a
              <a
                href='https://codehooks.io'
                class='link link-primary'
              >Codehooks.io</a>
              <a
                href='https://github.com/RestDB/directory-template/tree/main'
                class='link link-primary'
              >directory template</a>
            </p>
          </div>
        </div>
      </footer>
  </div>  
</body>

</html>